extends ../layouts/layout

block content
    div.col-12
        form.form-signin(target="", method="post")

            .form-group.row
                h1.col-12.h3.font-weight-normal.d-flex.justify-content-center Sign Up

            .form-group.row
                label.sr-only(for='inputUsername') Email address
                input#inputUsername.form-control(type='text', name='username', placeholder='username', required='', autofocus='')

            .form-group.row
                label.sr-only(for='inputEmail') Email address
                input#inputEmail.form-control(type='email', name='email', placeholder='Email address', required='', autofocus='')

            .form-group.row
                label.sr-only(for='inputPassword') Password
                input#inputPassword.form-control(type='password', name='password', placeholder='Password', required='')

            .form-group.row
                button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in